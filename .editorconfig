root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{js,jsx,ts,tsx,json}]
indent_size = 2

[*.{html,css,scss,less}]
indent_size = 2

[*.{md,yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false

[*.toml]
indent_size = 2

[Makefile]
indent_style = tab

[*.sh]
indent_size = 2

[*.{bat,cmd}]
end_of_line = crlf
EOF < /dev/null
