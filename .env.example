# tokamak-rl-control-suite Environment Configuration
# Copy this file to .env and update values as needed

# ============================================
# GENERAL SETTINGS
# ============================================

# Development environment (development, testing, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Random seed for reproducibility
RANDOM_SEED=42

# ============================================
# TRAINING CONFIGURATION
# ============================================

# Number of training environments to run in parallel
NUM_ENVS=4

# Device for training (cpu, cuda, auto)
DEVICE=auto

# Training output directory
TRAIN_OUTPUT_DIR=./outputs/training

# TensorBoard log directory
TENSORBOARD_LOG_DIR=./outputs/tensorboard

# Model checkpoint directory
CHECKPOINT_DIR=./outputs/checkpoints

# ============================================
# PHYSICS SIMULATION
# ============================================

# Physics solver precision (float32, float64)
PHYSICS_PRECISION=float32

# Enable physics solver caching for performance
PHYSICS_CACHE_ENABLED=true

# Physics cache directory
PHYSICS_CACHE_DIR=./cache/physics

# Maximum cached equilibria (0 for unlimited)
PHYSICS_CACHE_MAX_SIZE=10000

# ============================================
# TOKAMAK CONFIGURATION
# ============================================

# Default tokamak configuration (ITER, SPARC, NSTX, DIII-D, CUSTOM)
DEFAULT_TOKAMAK=ITER

# Custom tokamak configuration file (if DEFAULT_TOKAMAK=CUSTOM)
CUSTOM_TOKAMAK_CONFIG=./configs/custom_tokamak.yaml

# Plasma control frequency in Hz
CONTROL_FREQUENCY=100

# Simulation timestep in seconds
SIMULATION_TIMESTEP=0.001

# ============================================
# SAFETY SYSTEM
# ============================================

# Enable safety constraints
SAFETY_ENABLED=true

# Disruption prediction model path
DISRUPTION_MODEL_PATH=./models/disruption_predictor.pt

# Safety factor minimum threshold
Q_MIN_THRESHOLD=1.5

# Density limit fraction (of Greenwald limit)
DENSITY_LIMIT_FRACTION=0.8

# Beta limit (normalized)
BETA_LIMIT=0.04

# Emergency control timeout in milliseconds
EMERGENCY_TIMEOUT_MS=100

# ============================================
# PERFORMANCE SETTINGS
# ============================================

# Number of CPU cores to use (0 for all available)
NUM_CORES=0

# Enable multi-processing for parallel environments
MULTIPROCESSING=true

# Memory limit per environment in GB
MEMORY_LIMIT_GB=2

# Enable GPU acceleration (requires CUDA)
GPU_ENABLED=true

# GPU memory fraction to use (0.0-1.0)
GPU_MEMORY_FRACTION=0.8

# ============================================
# MONITORING & VISUALIZATION
# ============================================

# Enable real-time monitoring
MONITORING_ENABLED=true

# Monitoring update frequency in Hz
MONITORING_FREQUENCY=10

# Enable plasma visualization
VISUALIZATION_ENABLED=true

# Visualization rendering backend (matplotlib, plotly)
VIZ_BACKEND=matplotlib

# Save training videos
SAVE_VIDEOS=false

# Video output directory
VIDEO_OUTPUT_DIR=./outputs/videos

# ============================================
# DATA MANAGEMENT
# ============================================

# Experimental data directory
EXPERIMENTAL_DATA_DIR=./data/experimental

# Training data output directory
TRAINING_DATA_DIR=./outputs/data

# Enable data compression
DATA_COMPRESSION=true

# Data compression algorithm (gzip, lz4, zstd)
COMPRESSION_ALGORITHM=lz4

# Maximum data retention in days (0 for unlimited)
DATA_RETENTION_DAYS=30

# ============================================
# EXTERNAL INTEGRATIONS
# ============================================

# MDSplus server for experimental data (optional)
# MDSPLUS_SERVER=alcdata.pppl.gov:8501

# OMFIT integration (optional)
# OMFIT_PATH=/path/to/omfit

# Weights & Biases API key for experiment tracking (optional)
# WANDB_API_KEY=your_wandb_api_key_here

# MLflow tracking URI (optional)
# MLFLOW_TRACKING_URI=http://localhost:5000

# ============================================
# CLOUD SETTINGS (for distributed training)
# ============================================

# Ray cluster address for distributed training (optional)
# RAY_ADDRESS=ray://head-node:10001

# AWS S3 bucket for data storage (optional)
# S3_BUCKET=tokamak-rl-data

# Azure storage connection string (optional)
# AZURE_STORAGE_CONNECTION_STRING=your_connection_string

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Enable debug mode
DEBUG=false

# Enable code profiling
PROFILING_ENABLED=false

# Profiling output directory
PROFILING_OUTPUT_DIR=./outputs/profiling

# Enable automated testing
AUTO_TEST=true

# Test coverage minimum threshold
COVERAGE_THRESHOLD=90

# ============================================
# SECURITY SETTINGS
# ============================================

# API keys and secrets should be set in a secure manner
# Never commit actual secrets to version control

# JWT secret for API authentication (generate with: openssl rand -hex 32)
# JWT_SECRET=your_jwt_secret_here

# Database encryption key (generate with: openssl rand -hex 32)  
# DB_ENCRYPTION_KEY=your_db_encryption_key_here

# SSL certificate paths (for production deployment)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem